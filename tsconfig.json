{
  "compilerOptions": {
    "lib": [
      "ES2020",
    ],
    "target": "ES2020",
    "module": "ES2020",
    "rootDir": "./src",
    "outDir": "./dist",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node"
  },
}